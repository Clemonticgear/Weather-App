<%- include ('./partials/header') %>

    <div class="container">
        <form action="/index", method="GET">
            <button type="submit" value="submit" class="btnn pt-1"><i class="fas fa-search"></i></button>
            <input class="mb-2" type="search" id="sear" name="place" placeholder="Search for a city">
        </form>
    </div>

    

    <div class="forecast-table">
        <div class="container">
            <div class="forecast-container">
                <div class="today forecast">
                    <div class="forecast-header">
                        <div class="day"><%= day1[0].day %></div>
                        <div class="date"><%= day1[0].dt %></div>
                    </div> 
                    <div class="forecast-content pt-3">
                        <div class="location"><a href="/cities"><%= place[0].toUpperCase()+place.slice(1) %></a></div>
                        <% for(var i=0; i<count_day1; i++){ %>

                            <div class="bg bg-success text-center" style="height: 1.5rem; font-size: 1.2rem; font-weight: 500;"><%= day1[i].time %></div>
                            <a href="/day_weather">
                                <div class="degree">
                                    <div class="num"><%= Math.round(day1[i].main.temp * 10) / 10 %><sup>o</sup>C</div>	
                                    <div class="forecast-icon">
                                        <h2 style="font-size: 60px;"><i class="far fa-sun"></i></h2>
                                    </div>
                                </div>
                            </a>
                            <div class="mb-3">
                                <span><i class="fas fa-umbrella mr-2"></i><%= day1[i].main.humidity %>%</span>
                                <span><i class="fas fa-wind mr-2"></i><%= day1[i].wind.speed %>m/s</span>
                                <span><i class="fas fa-compass mr-2"></i><%= day1[i].wind.deg %></span>
                            </div>
                            
                        <% } %>

                    </div>
                </div>

                

                <div class="forecast">
                    <div class="forecast-header">
                        <div class="day"><%= day2[0].day %>, <%= day2[0].dt %></div>
                    </div>

                    <% for(var i=0; i<8; i++ ){ %>

                        <div class="bg bg-primary text-center" style="height: 1.5rem; font-size: 1.2rem; font-weight: 500;"></div>
                        <h2><i class="fas fa-cloud-rain"></i></h2>
                        <div class="forecast-content">
                            <div class="degree"><%= day2[i].main.temp %><sup>o</sup>C</div>
                            <small>Min: <%= day2[i].main.temp_min %><sup>o</sup>C</small>
                            <small style="font-size: .9rem;" class="mar">Humidity: <%= day2[i].main.humidity %>%</small>
                        </div>

                    <% } %>
                </div>

