<%- include ('./partials/header') %>

    <div class="container">
        <form action="/index", method="GET">
            <button type="submit" value="submit" class="btnn pt-1"><i class="fas fa-search"></i></button>
            <input class="mb-2" type="search" id="sear" name="place" placeholder="Search for a city">
        </form>
    </div>

    <div class="forecast-table">
        <div class="container">
            <div class="forecast-container">
                <div class="today forecast">
                    <div class="forecast-header">
                        <div class="day">Monday</div>
                        <div class="date"><%= date %></div>
                    </div> 
                    <div class="forecast-content">
                        <div class="location"><a href="/cities"><%= place[0].toUpperCase()+place.slice(1) %></a></div>
                        <a href="/day_weather">
                            <div class="degree">
                                <div class="num"><%= Math.round(temp * 10) / 10 %><sup>o</sup>C</div>	
                                <div class="forecast-icon">
                                    <h2 style="font-size: 60px;"><i class="far fa-sun"></i></h2>
                                </div>
                            </div>
                        </a>
                        <span><i class="fas fa-umbrella mr-2"></i><%= humidity %>%</span>
                        <span><i class="fas fa-wind mr-2"></i><%= wind_speed %>m/s</span>
                        <span><i class="fas fa-compass mr-2"></i>East</span>
                    </div>
                </div>
                <div class="forecast">
                    <div class="forecast-header">
                        <div class="day">Tuesday</div>
                    </div>
                    <h2><i class="fas fa-cloud"></i></h2> 
                    <div class="forecast-content">
                        <div class="degree">23<sup>o</sup>C</div>
                        <small>18<sup>o</sup></small>
                    </div>
                </div>
                <div class="forecast">
                    <div class="forecast-header">
                        <div class="day">Wednesday</div>
                    </div> 
                    <h2><i class="fas fa-cloud-rain"></i></h2>
                    <div class="forecast-content">
                        <div class="degree">23<sup>o</sup>C</div>
                        <small>18<sup>o</sup></small>
                    </div>
                </div>
                <div class="forecast">
                    <div class="forecast-header">
                        <div class="day">Thursday</div>
                    </div>
                    <h2><i class="fas fa-wind"></i></h2>
                    <div class="forecast-content">
                        <div class="degree">23<sup>o</sup>C</div>
                        <small>18<sup>o</sup></small>
                    </div>
                </div>
                <div class="forecast">
                    <div class="forecast-header">
                        <div class="day">Friday</div>
                    </div> 
                    <h2><i class="fas fa-umbrella"></i></h2>
                    <div class="forecast-content">
                        <div class="degree">23<sup>o</sup>C</div>
                        <small>18<sup>o</sup></small>
                    </div>
                </div>
                <div class="forecast">
                    <div class="forecast-header">
                        <div class="day">Saturday</div>
                    </div>
                    <h2><i class="far fa-sun"></i></h2>
                    <div class="forecast-content">
                        <div class="degree">23<sup>o</sup>C</div>
                        <small>18<sup>o</sup></small>
                    </div>
                </div>
                <div class="forecast">
                    <div class="forecast-header">
                        <div class="day">Sunday</div>
                    </div> 
                    <h2><i class="fas fa-cloud"></i></h2>
                    <div class="forecast-content">
                        <div class="degree">23<sup>o</sup>C</div>
                        <small>18<sup>o</sup></small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <canvas id="glCanvas" width="640" height="480"></canvas>

		
<%- include ('./partials/footer') %>
