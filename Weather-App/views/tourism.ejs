<%- include ('./partials/header') %>

    <div class="container">

        <form action="/tourism/filtered_places" method="GET">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="tour[temp]" placeholder="Temperature">
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="tour[hum]" placeholder="Humidity">
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="tour[landform]" placeholder="Landform">
                </div>
            </div>
            <button type="submit" value="submit" class="btnn mt-1 w"><i class="fas fa-search"></i></button>
        </form>

        

            <% for(var i=0; i<tour.length; i++){ %>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card text-white bg-primary">
                            <img class="card-img-top" src="..." alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title"><%= tour[i].place %></h5>
                                <p class="card-text">Distance: <%= tour[i].distance %></p>
                                <a class="btn btn-success view_more" href="/tourism/<%= tour[i]._id %>">View More Info</a>
                            </div>
                            <div class="card-footer text-white">
                                <small>Last updated 3 mins ago</small>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>

        
        
    </div>

<%- include ('./partials/footer') %>